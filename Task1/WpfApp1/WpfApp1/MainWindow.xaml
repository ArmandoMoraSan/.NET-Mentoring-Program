<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Margin="0,241,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127" Height="26" FontWeight="Bold"/>
        <Label x:Name="label" Content="" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Width="199"/>
        <Button x:Name="button" Content="Enter your name" HorizontalAlignment="Center" Margin="0,193,0,0" VerticalAlignment="Top" Height="38" Width="128" Click="Button_Click" Background="#FFDCA50F" FontWeight="Bold"/>

    </Grid>
</Window>
